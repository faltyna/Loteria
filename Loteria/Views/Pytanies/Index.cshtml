@model IEnumerable<Loteria.Models.DbModels.Pytanie>

@{
    ViewBag.Title = "Index";
}

<style>
    h2 {
        color: darkblue;
        font-family: monospace;
    }

    .table {
        background-color: aliceblue;
    }
</style>

<h2>Pytania</h2>

<p>
    @Html.ActionLink("Dodaj pytanie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tresc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tresc)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.pytanieId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.pytanieId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.pytanieId })
        </td>
    </tr>
}

</table>
